apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: {{ CELERY_WORKERS_NAME }}
  labels:
    app: {{ CELERY_WORKERS_NAME }}
    environment: {{ TARGET_ENVIRONMENT }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: {{ CELERY_WORKERS_NAME }}
  minReplicas: {{ CELERY_WORKERS_REPLICAS }}
  maxReplicas: {{ CELERY_WORKERS_MAX_REPLICAS }}
  targetCPUUtilizationPercentage: 80
